        $('#Div_banner_3').css("background-image", "url(" + URL.createObjectURL(e.target.files[0]) + ") ");
        UploadFile("banner3", "banner3");
    });

    function UploadFile(inputId, NameImage) {

        var fileUpload = $("#" + inputId).get(0);
        var files = fileUpload.files;
        var data = new FormData();
        data.append(NameImage, files[0]);

        $.ajax({
            type: "POST",
            url: "/Admin/UploadImages",
            contentType: false,
            processData: false,
            data: data,
            async: false,
            success: function (message) {
                Toast.fire({
                    icon: 'success',
                    title: 'Imagem edidata com sucesso'
                })

            },
            error: function () {
                Toast.fire({
                    icon: 'error',
                    title: ''
                })
                alert("Error!");
            },
        });

    };

</script>