<script>


    $('#EditBannerbtn').on('click', function (e) {
        e.preventDefault();
        $('#modal-EditBanner').addClass("show");
    })

    $('.AddEditCategorybtn').on('click', function (e) {
        e.preventDefault();
        $('#modal-AddEditCategory').addClass("show");
    })


    $('#banner1Click').on('click', function (e) {
        e.preventDefault();
        $('#banner1').trigger('click');
    });

    $("#banner1").change('change', function (e) {
        e.preventDefault();
        $('#Div_banner_1').css("background-image", "url(" + URL.createObjectURL(e.target.files[0]) + ") ");
        UploadFile("banner1", "banner1");
    });



    $('#banner2Click').on('click', function (e) {
        e.preventDefault();
        $('#banner2').trigger('click');
    });

    $("#banner2").change('change', function (e) {
