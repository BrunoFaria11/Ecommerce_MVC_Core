@using System.Security.Cryptography.X509Certificates
@using Ecommerce_MVC_Core.ViewModel
@using Ecommerce_MVC_Core.ViewModel.Public
@using Microsoft.AspNetCore.Http

@{

    var Tags = ViewBag.Tags as Dictionary<string, string>;
    var InfoImportant = Tags.FirstOrDefault(x => x.Key == "#InfoImportant").Value;
}


<!-- top noti -->
@if (InfoImportant != "" && InfoImportant != null)
{
    <div class="flex-c-m size22 bg0 s-text21 pos-relative">
      
        @InfoImportant
        <button class="flex-c-m pos2 size23 colorwhite eff3 trans-0-4 btn-romove-top-noti">
            <i class="fa fa-remove fs-13" aria-hidden="true"></i>
        </button>
    </div>

}

<!-- Header -->
<header class="header2">
    <!-- Header desktop -->
    <div class="container-menu-header-v2 p-t-26 p-b-26">
        <div class="topbar2">
            <div class="topbar-social">
                @*<a href="@Tags.FirstOrDefault(x => x.Key == "#LinkFacebook").Value" class="topbar-social-item fa fa-facebook"></a>*@
                <a href="@Tags.FirstOrDefault(x => x.Key == "#LinkInstragam").Value" class="topbar-social-item fa fa-instagram"></a>
                <a href="@Tags.FirstOrDefault(x => x.Key == "#LinkTwitter").Value" class="topbar-social-item fa fa-twitter"></a>
                <a href="@Tags.FirstOrDefault(x => x.Key == "#LinkYouTube").Value" class="topbar-social-item fa fa-youtube-play"></a>
                <a href="@Tags.FirstOrDefault(x => x.Key == "#LinkPatreon").Value" class="topbar-social-item fa fa-patreon"></a>
            </div>

            <!-- Logo2 -->
            <a asp-controller="Home" asp-action="Index" class="logo2">
                <img src="~/uploads/Images/Logo.jpg" alt="IMG-LOGO" style="max-height: 130px;">
            </a>

            <div class="topbar-child2">
                <span class="topbar-email">
                    @Tags.FirstOrDefault(x => x.Key == "#LinkEmail").Value
                </span>
                <!--  -->
                <a asp-controller="Users" asp-action="Login" class="header-wrapicon1 dis-block m-l-30">
                    <img src="~/Template/public/images/icons/icon-header-01.png" class="header-icon1" alt="ICON">
                </a>

                <span class="linedivide1"></span>

                <div class="header-wrapicon2 m-r-13">
                    <img src="~/Template/public/images/icons/icon-header-02.png" class="header-icon1 js-show-header-dropdown" alt="ICON">
                    <span class="header-icons-noti total-count">0</span>

                    <!-- Header cart noti -->
                    <div class="header-cart header-dropdown">
                        <ul class="header-cart-wrapitem">
                        </ul>

                        <div class="header-cart-total">
                            Total: <span class="total-cart"></span> €
                        </div>

                        <div class="header-cart-buttons">
                            <div class="header-cart-wrapbtn">
                                <!-- Button -->
                                <a asp-controller="Home" asp-action="Cart" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                    Ver Carrinho
                                </a>
                            </div>

                            <div class="header-cart-wrapbtn">
                                <!-- Button -->
                                <a href="#" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                    Comprar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Header Mobile -->
    <!-- Menu Mobile -->
    <div class="wrap_header_mobile">
        <!-- Logo moblie -->

        <a asp-controller="Home" asp-action="Index" class="logo-mobile">
            <img src="~/uploads/Images/Logo.jpg" alt="IMG-LOGO" style="max-height: 57px;">
        </a>


        <!-- Button show menu -->
        <div class="btn-show-menu">
            <!-- Header Icon mobile -->
            <div class="header-icons-mobile">

                <a asp-controller="Users" asp-action="Login" class="header-wrapicon1 dis-block ">
                    <img src="~/Template/public/images/icons/icon-header-01.png" class="header-icon1" alt="ICON">
                </a>
       

                <span class="linedivide2"></span>

                <div class="header-wrapicon2" style="margin-right: 21px;">
                    <img src="~/Template/public/images/icons/icon-header-02.png" class="header-icon1 js-show-header-dropdown" alt="ICON">
                    <span class="header-icons-noti total-count">0</span>

                    <!-- Header cart noti -->
                    <div class="header-cart header-dropdown">
                        <ul class="header-cart-wrapitem">
                        </ul>

                        <div class="header-cart-total">
                            Total: <span class="total-cart"></span> €
                        </div>

                        <div class="header-cart-buttons">
                            <div class="header-cart-wrapbtn">
                                <!-- Button -->
                                <a asp-controller="Home" asp-action="Cart" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                    Ver Carrinho
                                </a>
                            </div>

                            <div class="header-cart-wrapbtn">
                                <!-- Button -->
                                <a href="#" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                    Comprar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

       
        </div>
    </div>
 
</header>

@Html.Partial("Scripts")